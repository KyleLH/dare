<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sketchyshitenabler"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sketchyshitenabler.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sketchyshitenabler.InboxActivity"
            android:label="@string/title_activity_inbox"
            android:parentActivityName="com.sketchyshitenabler.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sketchyshitenabler.MainActivity" />
        </activity>
        <activity
            android:name="com.sketchyshitenabler.SendDareActivity"
            android:label="@string/title_activity_send_dare" >
        </activity>
        <activity
            android:name="com.sketchyshitenabler.GetADare"
            android:label="@string/title_activity_get_adare" >
        </activity>
        <activity
            android:name="com.sketchyshitenabler.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
    </application>

</manifest>
